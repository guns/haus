abort "USAGE: #{File.basename __FILE__} out-file input-files â€¦" if ARGV.size < 2

out, *inputs = ARGV
args = [inputs.first] + (["+"] * (inputs.size - 1)).zip(inputs.drop 1)
exec "mkvmerge", "-o", out, *args.flatten
