#!/usr/bin/env ruby
# -*- encoding: utf-8 -*-

require 'fileutils'
require 'optparse'
require 'haus/utils'

include FileUtils::Verbose

force = false
parser = OptionParser.new { |opt| opt.on('-f', '--force') { force = true } }
args = parser.parse ARGV

abort 'USAGE: lnrelative src dst' unless args.size == 2

src, lnk = args
dst = Haus::Utils.relpath src, lnk
rm_f lnk if force
ln_s dst, lnk
