#!/usr/bin/env ruby
# -*- encoding: utf-8 -*-

ver = nil
buf = File.read('project.clj').sub(/(defproject\s+\S+\s+)"(\d+\.\d+\.)(\d+)"/) {
  ver = $2 + ($3.to_i + 1).to_s + "-SNAPSHOT"
  %Q{#$1"#{ver}"}
}

if ver
  File.open('project.clj', 'w') { |f| f.puts buf }
  system 'git', 'add', 'project.clj'
  system 'git', 'commit', '-m', "Set project version to #{ver}"
end
