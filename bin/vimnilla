DIRS=()

while getopts :d:h OPT; do
    case $OPT in
        d) DIRS+=("$OPTARG");;
        h) echo 'vimnilla [-d plugin-dir] â€¦'; exit;;
    esac
done
shift $((OPTIND-1))

VIMRC="$(ruby -r shellwords -e '
    puts %q{set rtp^=%s | filetype plugin indent on | syntax on} % ARGV.map(&:shellescape).join(",")
' -- "${DIRS[@]}")"

exec vim -N -u <(echo "$VIMRC") -U <(echo "$VIMRC") "$@"
