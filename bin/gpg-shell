#!/bin/sh

if [ -n "$SSH_AUTH_SOCK" ]; then
    echo "SSH_AUTH_SOCK already set: $SSH_AUTH_SOCK"
elif [ -n "$GPG_AGENT_INFO" ]; then
    echo "GPG_AGENT_INFO already set: $GPG_AGENT_INFO"
elif [ "$#" -gt 0 ]; then
    exec gpg-agent --enable-ssh-support --daemon "$@"
else
    exec gpg-agent --enable-ssh-support --daemon "${SHELL:-$(command -v bash)}"
fi
