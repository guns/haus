require 'optparse'

class Report
  class << self
    def report msg, opts = {}
      r = self.new
      r.opts = opts
      r.report msg
    end
  end

  attr_accessor :opts

  def initialize args = []
    @args = args
    @opts = { :title => __FILE__, :default_message => 'Attention!' }
  end

  def options
    OptionParser.new do |opt|
      opt.summary_width = 24
      opt.banner = %Q(\
        Display / speak a message to the user using platform-specific notifiers.

        Usage: #{File.basename __FILE__} [options] [msg]

        Options:
      ).gsub /^ +/, ''

      opt.on '-t', '--title TITLE', 'Title for notification, if applicable' do |arg|
        @opts[:title] = arg
      end

      opt.on '-s', '--sticky', 'Set notification to sticky, if applicable' do
        @opts[:sticky] = true
      end

      opt.on '-f', '--file SOUND-FILE', 'Play given file instead of speaking message' do |arg|
        @opts[:file] = File.expand_path arg
      end
    end
  end

  def darwin_report msg
    if @opts[:file]
      Process.detach fork { exec 'afplay', @opts[:file] } if system 'command -v afplay &>/dev/null'
    else
      Process.detach fork { exec 'say', msg } if system 'command -v say &>/dev/null'
    end

    if system 'command -v growlnotify &>/dev/null'
      Process.detach fork {
        $stderr.reopen '/dev/null'
        cmd  = %W[growlnotify -m #{msg}]
        cmd += %w[--sticky]                 if @opts[:sticky]
        cmd += %W[--title #{@opts[:title]}] if @opts[:title]
        exec *cmd
      }
    end
  end

  def linux_report msg
    if @opts[:file]
      Process.detach fork { exec 'play', '-q', @opts[:file] } if system 'command -v play &>/dev/null'
    else
      Process.detach fork { exec 'espeak', '-ven-us', msg } if system 'command -v espeak &>/dev/null'
    end

    if system 'command -v notify-send &>/dev/null'
      Process.detach fork {
        $stderr.reopen '/dev/null'
        exec 'notify-send', @opts[:title], msg
      }
    end
  end

  def report msg
    buf = msg.empty? ? @opts[:default_message] : msg.dup
    case RUBY_PLATFORM
    when /darwin/ then darwin_report buf
    else               linux_report buf
    end
  end

  def run
    args = options.parse @args
    report args.join(' ')
  end
end

Report.new(ARGV).run if $0 == __FILE__
