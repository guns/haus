script = File.symlink?(__FILE__) \
         ? File.expand_path(File.readlink(__FILE__), File.dirname(__FILE__)) \
         : __FILE__
$:.unshift File.expand_path('../../lib/ruby', script)

require 'haus'

$0 = 'haus'
Haus.new(ARGV).run
