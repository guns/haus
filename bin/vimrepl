#!/usr/bin/env bash

vimrepl() {
    local files=() OPTIND OPTARG opt
    while getopts :f: opt; do
        case "$opt" in
        f) files+="$OPTARG";;
        *) echo "USAGE: $FUNCNAME [-f filename] [cmd]"
        esac
    done
    shift $((OPTIND-1))

    exec env _VIMREPL="$*" vim -c 'execute "Screen " . $_VIMREPL' "${files[@]}"
}

vimrepl "$@"
