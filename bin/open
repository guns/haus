#!/bin/sh

# We don't want to start GUI applications as root
if [ "$EUID" -eq 0 ]; then
    if [ -n "$SUDO_USER" ]; then
        exec sudo -u "$SUDO_USER" "$0" "$@" >/dev/null 2>&1
    else
        echo 'Refusing to xdg-open as root!' >&2
        exit 1
    fi
else
    for arg in "$@"; do
        xdg-open "$arg" >/dev/null 2>&1
    done
fi
