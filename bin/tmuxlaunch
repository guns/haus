#!/bin/bash
#
# Simple tmux wrapper

if [[ $TMUX ]]; then
    echo '$TMUX is already set!' >&2
    exit 1
fi

NEW=0
WRAPPER=''
SESSION=''
CONF="set-option -g default-terminal %s\nsource-file ~/.tmux.conf\n"

if [[ $TERM == *256color* ]]; then
    TMUX_TERM='tmux-256color'
else
    TMUX_TERM='tmux'
fi

while getopts :ngst: OPT; do
    case $OPT in
    n) NEW=1;;
    g) WRAPPER='gpg-shell';;
    s) WRAPPER='ssh-shell';;
    t) SESSION="$OPTARG";;
    *) echo "Usage: ${0##*/} [-ngs] [-t session] [args â€¦]" >&2; exit 1
    esac
done
shift $((OPTIND-1))

exec_tmux() {
    exec $WRAPPER tmux -f <(printf "$CONF" "$TMUX_TERM") "$@"
}

if ((NEW)); then
    exec_tmux new-session "$@"
elif [[ $SESSION ]]; then
    if tmux has-session -t "$SESSION" &>/dev/null; then
        exec_tmux attach-session -d -t "$SESSION" "$@"
    else
        exec_tmux new-session -s "$SESSION" "$@"
    fi
else
    if tmux has-session &>/dev/null; then
        exec_tmux attach-session -d "$@"
    else
        exec_tmux new-session "$@"
    fi
fi
