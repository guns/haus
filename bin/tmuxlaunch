#!/usr/bin/env bash
#
# Simple tmux wrapper

EXEC=''
while getopts :x opt; do
    case $opt in
    x) EXEC='exec';;
    *) echo >&2 "USAGE: ${0##*/} [-x]"; exit
    esac
done
shift $((OPTIND-1))

if [[ "$TMUX" ]]; then
    echo >&2 '$TMUX is already set!'
    exit 1
elif command tmux has-session &>/dev/null; then
    command $EXEC tmux attach
else
    command $EXEC tmux new
fi
