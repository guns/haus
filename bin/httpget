require 'webrick'

if ARGV.include? '-h' or ARGV.size > 1
  puts "Usage: httpget [path]\n\nTranslate an HTTP GET request into a curl request."
  exit
end

req = WEBrick::HTTPRequest.new WEBrick::Config::HTTP
req.parse $stdin
cmd = %W[curl --progress-bar --location --user-agent #{req.header["user-agent"].first || "Mozilla/5.0 (X11; Ubuntu; Linux x86_64; rv:69.0) Gecko/20100101 Firefox/69.0"}]
cmd << "-o" << ARGV.first unless ARGV.empty?
cmd << req.request_uri.to_s
warn cmd.inspect
exec *cmd
