require 'optparse'

r, d = ARGV.getopts('r', 'd').values_at 'r', 'd'
filter = d ? lambda { |f| File.directory? f } : lambda { |f| File.file? f }
glob = File.join ARGV.first || '.', r ? '**/*' : '*'
puts Dir[glob].select { |f| filter.call f }.shuffle.first
