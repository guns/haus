# -*- encoding: utf-8 -*-

desc 'Update local package'
task :local do
  require 'pathname'
  require 'fileutils'

  args = ARGV.drop_while { |a| a != 'local' }.drop 1

  args.each do |src|
    src = src.chomp '/'
    dst = File.join 'local', File.basename(src)
    sh 'abs', src
    unless File.directory? dst
      sh 'mkdir', '-p', dst
      sh 'rsync', '-av', '--delete', src + '/', dst + '/'
      Dir.chdir dst do
        FileUtils.ln_s Pathname.new(src).relative_path_from(Pathname.new dst), File.basename(src)
      end
    end
  end

  # This is a quick hack, adapted from vimpacnew
  files = %x(git status --short).lines.map { |l| l.chomp[/.{3}(.*)/, 1] }

  exec 'vim', *files.reduce([]) { |as, f|
    as << '-c' << "edit #{f.shellescape} | diffthis | vsplit #{f.sub(%r{.*?(/.*)}, 'local/\1').shellescape} | diffthis | tabnew"
  }, '-c', 'tabclose | tabfirst' if files.any?

  exit # Stop processing ARGV
end

desc 'Update AUR packages'
task :aur do
  require 'yaml'
  require 'shellwords'

  args = ARGV.drop_while { |a| a != 'local' }.drop 1
  urls = YAML.load_file 'AUR.yaml'
  ENV['CURL_CA_BUNDLE'] = File.expand_path '~/.certificates/aur.archlinux.org.crt'

  Dir.chdir 'AUR' do
    urls.map do |url|
      Thread.new { sh "curl -#L #{url.shellescape} | tar zxv" }
    end.each &:join
  end
end
