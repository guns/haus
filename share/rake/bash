task :default => :configure

desc 'Configure bash'
task :configure do
  system 'autoconf' unless File.executable? 'configure'

  cmd = %W[
    ./configure
    --prefix=#{ENV['PREFIX'] || '/opt/bash'}
  ]

  sh *cmd
end
