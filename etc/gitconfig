[user]
    name  = guns
    email = self@sungpae.com
    signingkey = 0x4BC72AA6B1AE2B5AC7F7ADCF9D1AA266D2BC9C2D

[core]
    whitespace   = trailing-space,space-before-tab
    ignorecase   = false

[color]
    ui = auto

[color.diff]
    meta           = blue
    mnemonicprefix = true

[diff]
    renames = copies

[interactive]
    singlekey = true

[merge]
    tool = vimdiff

[push]
    # Similar to the modern default, 'simple'
    default = current

[rerere]
    enabled = true

[alias]
    # Index operations
    a      = add --all
    aa     = add --all .
    ai     = add --all --interactive
    af     = add --all --force
    ap     = add --all --patch
    ac     = !git add --all . && git commit --all
    acv    = !git add --all . && git commit --all --verbose
    acva   = !git add --all . && git commit --all --verbose --amend
    acm    = !git add --all . && git commit --all --message
    rs     = reset
    rshard = reset --hard

    # Committing
    c    = commit
    cv   = commit --verbose
    cva  = commit --verbose --amend
    cm   = commit --message
    ca   = commit --all
    cav  = commit --all --verbose
    cava = commit --all --verbose --amend
    cam  = commit --all --message

    # Merging and rebasing
    m   = merge --no-ff --stat --log --edit
    mm  = merge --no-ff --stat --log --no-edit
    mf  = merge --ff-only --no-edit
    rb  = rebase
    rbi = rebase --interactive
    cp  = cherry-pick

    # Log
    l     = log --decorate --graph --show-signature
    lf    = log --decorate --graph --show-signature --first-parent --no-merges
    lfr   = log --decorate --graph --show-signature --first-parent --no-merges --date=relative
    lst   = log --decorate --graph --show-signature --stat
    lstr  = log --decorate --graph --show-signature --stat --date=relative
    lfst  = log --decorate --graph --show-signature --stat --first-parent --no-merges
    lfstr = log --decorate --graph --show-signature --stat --first-parent --no-merges --date=relative

    lp    = log --decorate --patch --show-signature --stat
    lpr   = log --decorate --patch --show-signature --stat --date=relative
    lfp   = log --decorate --patch --show-signature --stat --first-parent --no-merges
    lfpr  = log --decorate --patch --show-signature --stat --first-parent --no-merges --date=relative
    lpw   = log --decorate --patch --show-signature --stat --ignore-all-space
    lpwr  = log --decorate --patch --show-signature --stat --ignore-all-space --date=relative
    wlp   = log --decorate --patch --show-signature --stat --color-words=.
    wlpr  = log --decorate --patch --show-signature --stat --color-words=. --date=relative
    wlpwr = log --decorate --patch --show-signature --stat --color-words=. --ignore-all-space --date=relative

    l1    = log --decorate --patch --show-signature --stat -1
    l1r   = log --decorate --patch --show-signature --stat -1 --date=relative
    l1w   = log --decorate --patch --show-signature --stat -1 --ignore-all-space
    l1wr  = log --decorate --patch --show-signature --stat -1 --ignore-all-space --date=relative
    wl1   = log --decorate --patch --show-signature --stat -1 --color-words=.
    wl1r  = log --decorate --patch --show-signature --stat -1 --color-words=. --date=relative

    f     = log --graph --date=short --pretty=format:'%C(yellow)%h %C(cyan)%aN %C(blue)%ad%C(magenta)%d %C(reset)%s'
    fr    = log --graph --date=short --pretty=format:'%C(yellow)%h %C(cyan)%aN %C(blue)%ad%C(magenta)%d %C(reset)%s' --date=relative
    fa    = log --graph --date=short --pretty=format:'%C(yellow)%h %C(cyan)%aN %C(blue)%ad%C(magenta)%d %C(reset)%s' --all
    far   = log --graph --date=short --pretty=format:'%C(yellow)%h %C(cyan)%aN %C(blue)%ad%C(magenta)%d %C(reset)%s' --all --date=relative
    ff    = log --graph --date=short --pretty=format:'%C(yellow)%h %C(cyan)%aN %C(blue)%ad%C(magenta)%d %C(reset)%s' --first-parent --no-merges
    ffr   = log --graph --date=short --pretty=format:'%C(yellow)%h %C(cyan)%aN %C(blue)%ad%C(magenta)%d %C(reset)%s' --first-parent --no-merges --date=relative

    lg    = log --patch -G
    lgr   = log --patch -G --date=relative
    lgi   = log --patch -G --regexp-ignore-case
    lgir  = log --patch -G --regexp-ignore-case --date=relative

    # Branches
    br   = branch -vv
    bra  = branch --all -vv
    brd  = branch --delete
    brdd = branch -D
    brm  = branch --move
    co   = checkout
    cob  = checkout -b
    cot  = checkout --track
    sb   = show-branch --color

    # Tags
    t   = tag
    td  = tag --delete
    ts  = tag --sign
    tsf = tag --sign --force

    # Diff and patch
    di   = diff
    diw  = diff --ignore-all-space
    wdi  = diff --color-words=.

    dih  = diff HEAD
    dihw = diff HEAD --ignore-all-space
    wdih = diff HEAD --color-words=.

    dic  = diff --cached
    dis  = diff --summary --stat

    fp   = format-patch
    fpo  = format-patch --stdout

    # Remotes
    r            = remote --verbose
    up           = remote update --prune
    shallowclone = clone --depth=1

    # Stash
    sta     = stash
    stap    = stash --patch
    stau    = stash --include-untracked
    staup   = stash --include-untracked --patch
    stal    = stash list
    stapop  = stash pop
    stashow = stash show --patch

    # Grep
    g    = grep --perl-regexp 
    gi   = grep --perl-regexp --ignore-case
    gw   = grep --perl-regexp --word-regexp
    gf   = grep --fixed-strings
    gif  = grep --fixed-strings --ignore-case
    giw  = grep --perl-regexp --ignore-case --word-regexp
    gifw = grep --fixed-strings --ignore-case --word-regexp

    # SVN
    sf = svn fetch

    # Misc
    bs   = bisect
    ho   = hash-object
    how  = hash-object -w
    ls   = ls-files
    lso  = ls-files --others
    lsu  = ls-files --others --exclude-standard
    st   = status --short
    sm   = submodule
    fd   = clean --force -d
    fdx  = clean --force -d -x
    rl   = reflog
    rp   = rev-parse
    rtmu = read-tree -mu
