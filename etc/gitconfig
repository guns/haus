[user]
    name  = guns
    email = self@sungpae.com
    signingkey = 0x4BC72AA6B1AE2B5AC7F7ADCF9D1AA266D2BC9C2D

[core]
    whitespace   = trailing-space,space-before-tab
    ignorecase   = false

[color]
    ui = auto

[color.diff]
    meta           = blue
    mnemonicprefix = true

[diff]
    renames = copies

[interactive]
    singlekey = true

[merge]
    tool = vimdiff

[push]
    # Similar to the modern default, 'simple'
    default = current

[rerere]
    enabled = true

[alias]
    # Index operations
    a      = add --all
    aa     = add --all .
    ai     = add --all --interactive
    af     = add --all --force
    ap     = add --all --patch
    ac     = !git add --all . && git commit -a
    acv    = !git add --all . && git commit -a -v
    acva   = !git add --all . && git commit -a -v --amend
    acm    = !git add --all . && git commit -a -m
    rs     = reset
    rshard = reset --hard

    # Committing
    c    = commit
    cv   = commit -v
    cva  = commit -v --amend
    cm   = commit -m
    ca   = commit -a
    cav  = commit -a -v
    cava = commit -a -v --amend
    cam  = commit -a -m

    # Merging and rebasing
    m   = merge --no-ff --stat --log --edit
    mm  = merge --no-ff --stat --log --no-edit
    mf  = merge --ff-only --no-edit
    rb  = rebase
    rbi = rebase -i
    cp  = cherry-pick

    # Log
    l    = log --decorate --graph --show-signature
    lf   = log --decorate --graph --show-signature --first-parent --no-merges
    lst  = log --decorate --graph --show-signature --stat
    lfst = log --decorate --graph --show-signature --stat --first-parent --no-merges

    lp   = log --decorate --patch --show-signature --stat
    lfp  = log --decorate --patch --show-signature --stat --first-parent --no-merges
    lpw  = log --decorate --patch --show-signature --stat -w
    wlp  = log --decorate --patch --show-signature --stat --color-words=.
    wlpw = log --decorate --patch --show-signature --stat --color-words=. -w

    l1   = log --decorate --patch --show-signature --stat -1
    l1w  = log --decorate --patch --show-signature --stat -1 -w
    wl1  = log --decorate --patch --show-signature --stat -1 --color-words=.

    f    = log --graph --date=short --pretty=format:'%C(yellow)%h %C(cyan)%aN %C(blue)%ad%C(magenta)%d %C(reset)%s'
    fa   = log --graph --date=short --pretty=format:'%C(yellow)%h %C(cyan)%aN %C(blue)%ad%C(magenta)%d %C(reset)%s' --all
    ff   = log --graph --date=short --pretty=format:'%C(yellow)%h %C(cyan)%aN %C(blue)%ad%C(magenta)%d %C(reset)%s' --first-parent --no-merges

    lg   = log --patch -G
    lgi  = log --patch -i -G

    # Branches
    br   = branch -vv
    bra  = branch -avv
    brd  = branch -d
    brdd = branch -D
    brm  = branch -m
    co   = checkout
    cob  = checkout -b
    cot  = checkout -t
    sb   = show-branch --color

    # Tags
    t   = tag
    td  = tag -d
    ts  = tag -s
    tsf = tag -s -f

    # Diff and patch
    di   = diff
    diw  = diff -w
    wdi  = diff --color-words=.

    dih  = diff HEAD
    dihw = diff HEAD -w
    wdih = diff HEAD --color-words=.

    dic  = diff --cached
    dis  = diff --summary --stat

    fp   = format-patch
    fpo  = format-patch --stdout

    # Remotes
    r            = remote -v
    up           = remote update --prune
    shallowclone = clone --depth=1

    # Stash
    sta     = stash
    stap    = stash -p
    stau    = stash -u
    staup   = stash -u -p
    stal    = stash list
    stapop  = stash pop
    stashow = stash show -p

    # Grep
    g    = grep -P
    gi   = grep -Pi
    gw   = grep -Pw
    gf   = grep -F
    gif  = grep -Fi
    giw  = grep -Piw
    gifw = grep -Fiw

    # SVN
    sf = svn fetch

    # Misc
    bs   = bisect
    ho   = hash-object
    how  = hash-object -w
    ls   = ls-files
    lso  = ls-files -o
    lsu  = ls-files -o --exclude-standard
    st   = status --short
    sm   = submodule
    fd   = clean -fd
    fdx  = clean -fdx
    rl   = reflog
    rp   = rev-parse
    rtmu = read-tree -mu
