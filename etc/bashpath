#!/usr/bin/env bash

FUNCTIONS="$HOME/.bashrc.d/functions.bash"
EXEC=''

while getopts :x opt; do
    case $opt in
    x) EXEC='exec';;
    *) echo >&2 "Usage: ${0##*/} [-x] [command]"; exit
    esac
done
shift $((OPTIND-1))

if [[ -r "$FUNCTIONS" ]]; then
    . "$FUNCTIONS"
    REQUIRE ~/.bashrc.d/path.bash
    CLEANUP
else
    echo >&2 "Missing $FUNCTIONS"
    exit 1
fi

if (($#)); then
    command $EXEC "$@"
else
    echo "$PATH"
fi
