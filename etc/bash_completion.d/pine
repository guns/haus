# PINE address-book completion

have pine || have alpine || return

_pineaddr()
{
    local cur prev words cword
    _init_completion || return

    COMPREPLY=( $( compgen -W '$( awk "{print \$1}" ~/.addressbook \
        2>/dev/null)' -- "$cur" ) )
} &&
complete -F _pineaddr -o default pine alpine

