# BitKeeper completion adapted from code by  Bart Trojanowski <bart@jukie.net>

have bk || return

_bk()
{
    local cur prev words cword
    _init_completion || return

    local BKCMDS="$( bk help topics | awk '/^  bk/ { print $4 }' | \
        xargs printf '%s ' )"

    COMPREPLY=( $( compgen -W "$BKCMDS" -- "$cur" ) )
    _filedir

    return 0
} &&
complete -F _bk bk

