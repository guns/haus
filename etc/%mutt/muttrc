# Configuration files
source ~/.mutt/muttrc.colors
source ~/.mutt/muttrc.settings
source $alias_file

# Mailboxes
mailboxes `IFS=$'\n'; dirs=(~/Mail/Local/*); unset IFS; echo ${dirs[@]// /\\ }` \
          ~/.mutt/notmuch/results

