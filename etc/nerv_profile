# df / du
alias -e df='df -h'
alias -e du='du -h'
alias -e dus='du -s'
dusort() {
    echo >&2 'Calculating sorted file size...'
    local buf line
    if (($#)); then
        buf="$(f "$@" -print0 | xargs -0 du -s)"
    else
        buf="$(f1 \( ! -name . \) -print0 | xargs -0 du -s)"
    fi
    echo -e "$buf" | sort -n | cut -f2 | while read line; do command du -sh -- "$line"; done
} && comp_transfer f dusort

