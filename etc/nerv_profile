    alias -e ssh-password='ssh -o "PreferredAuthentications password"'
    alias -e ssh-nocompression='ssh -o "Compression no"'
    type ssh-proxy &>/dev/null && comp_transfer ssh ssh-proxy

    alias -e scp='scp -C -2' && {
        alias -e scpr='scp -r'
    }
}

