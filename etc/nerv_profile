# list resolver targets
resolv() {
    if type scutil &>/dev/null; then
        echorun scutil --dns
    elif [[ -r /etc/resolv.conf ]]; then
        echorun grep -v '^#' /etc/resolv.conf
    else
        echo 'No resolvers file.'; return 1
    fi
}


